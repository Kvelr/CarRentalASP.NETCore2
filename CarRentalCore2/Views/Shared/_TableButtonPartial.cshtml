@model CarRentalCore2.Models.IndvidualButtonPartial

<td style="width:150px;">
    <div class="btn-group" role="group">
        @Html.Partial("_IndvidualButtonPartial",
                     new IndvidualButtonPartial
                     {
                         Action = "Edit",
                         ButtonType = "btn-primary",
                         Glyph = "pencil",
                         Text = "Edit",
                         ServiceID = Model.ServiceID,
                         CustomerID = Model.CustomerID,
                         CarId = Model.CarId
                     })

        @Html.Partial("_IndvidualButtonPartial",
                     new IndvidualButtonPartial
                     {
                         Action = "Details",
                         ButtonType = "btn-success",
                         Glyph = "list",
                         Text = "Details",
                         ServiceID = Model.ServiceID,
                         CustomerID = Model.CustomerID,
                         CarId = Model.CarId
                     })

        @Html.Partial("_IndvidualButtonPartial",
                    new IndvidualButtonPartial
                    {
                        Action = "Delete",
                        ButtonType = "btn-danger",
                        Glyph = "trash",
                        Text = "Delete",
                        ServiceID = Model.ServiceID,
                        CustomerID = Model.CustomerID,
                        CarId = Model.CarId
                    }) 
    </div>
<td />